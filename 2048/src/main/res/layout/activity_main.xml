<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbada0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.studyjams.s1.sj14.wangtao.MainActivity">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:padding="8dp"
            android:text="Score:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/score_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:padding="8dp"
            android:text="0"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:padding="8dp"
            android:text="Best:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/best_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:padding="8dp"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/newGame_button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/linear_layout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:background="#33ffffff"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClick"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="new game" />

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newGame_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:columnCount="4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_1"
            style="@style/TextViewsStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_view_2"
            style="@style/TextViewsStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_view_3"
            style="@style/TextViewsStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_view_4"
            style="@style/TextViewsStyle"
            android:gravity="center" />


        <TextView
            android:id="@+id/text_view_5"
            style="@style/TextViewsStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_view_6"
            style="@style/TextViewsStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_view_7"
            style="@style/TextViewsStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_view_8"
            style="@style/TextViewsStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_view_9"
            style="@style/TextViewsStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_view_10"
            style="@style/TextViewsStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_view_11"
            style="@style/TextViewsStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_view_12"
            style="@style/TextViewsStyle"
            android:gravity="center" />


        <TextView
            android:id="@+id/text_view_13"
            style="@style/TextViewsStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_view_14"
            style="@style/TextViewsStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_view_15"
            style="@style/TextViewsStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_view_16"
            style="@style/TextViewsStyle"
            android:gravity="center" />

    </GridLayout>

</RelativeLayout>
